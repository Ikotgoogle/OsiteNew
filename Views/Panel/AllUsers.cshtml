@using OsiteNew.ViewModels
@model AllUsersVM

<link href="/css/panelchildren/allusers.css" rel="stylesheet" />

<h1>Все пользователи: </h1>
<div class="users">
        @foreach(var user in Model.Users) {
            <div class="user"> 
                <div class="ava">
                    <a asp-controller="Profile" asp-action="AuthorPage" asp-route-userId="@user.Id">
                        <img src="@user.Avatar" />
                        <div class="nick">@user.Nickname</div>
                    </a>
                </div>
                <div class="name">
                    <h1>@user.Name</h1>
                    <h1>@user.LastName</h1>
                    <h2>@user.Birthday</h2>
                </div>

                <form method="post" asp-action="Ban">
                    <input type="hidden" name="id" value="@user.Id" />
                    <input type="submit" class="delete" value="⊘" alt="Заблокировать" />
                </form>
            </div>
        }
</div>

<h1>Заблокированные пользователи: </h1>
<div class="users">
        @foreach(var user in Model.BannedUsers) {
            <div class="user"> 
                <div class="ava">
                    <a asp-controller="Profile" asp-action="AuthorPage" asp-route-userId="@user.Id">
                        <img src="@user.Avatar" />
                        <div class="nick">@user.Nickname</div>
                    </a>
                </div>
                <div class="name">
                    <h1>@user.Name</h1>
                    <h1>@user.LastName</h1>
                    <h2>@user.Birthday</h2>
                </div>

                <form method="post" asp-action="Delete">
                    <input type="hidden" name="id" value="@user.Id" />
                    <input type="submit" value="x" alt="Разблокировать" class="delete" />
                </form>
            </div>
        }
</div>