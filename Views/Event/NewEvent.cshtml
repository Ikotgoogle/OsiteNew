@using OsiteNew.Models;
@model Event
<h1>Создание нового события</h1>
<form method="post" asp-controller="Event" asp-action="NewEvent">
    <div>
        <label asp-for="Title">Title: </label>
        <input type="text" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Place">Place: </label>
        <input type="text" asp-for="Place" />
        <span asp-validation-for="Place"></span>
    </div>
    <div>
        <label asp-for="Description">Description: </label>
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Date">Date: </label>
        <input type="date" asp-for="Date" />
        <span asp-validation-for="Date"></span>
    </div>
    <div>
        <label asp-for="Time">Time: </label>
        <input type="time" asp-for="Time" />
        <span asp-validation-for="Time"></span>
    </div>
    <input type="submit" value="Создать" />
</form>