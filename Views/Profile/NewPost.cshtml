@using OsiteNew.ViewModels;
@model ProfileVM

<h1 class="header">Ваш новый пост</h1>

<form method="post" asp-controller="Profile" asp-action="NewPost" class="post-form">
    <div class="form-group">
        <label asp-for="Post.Title" class="form-label">Заголовок:</label> 
        <input type="text" asp-for="Post.Title" class="form-input" maxlength="100" value=""/>
        <span asp-validation-for="Post.Title" class="validation-message"></span>
    </div>
    <div class="form-group">
        <label asp-for="Post.Description" class="form-label">Описание:</label>
        <textarea asp-for="Post.Description" rows="5" class="form-textarea" maxlength="500" id="textarea" onfocus="this.value=''"></textarea>
        <span asp-validation-for="Post.Description" class="validation-message"></span>
    </div>

    <input type="submit" class="submit-button" value="Опубликовать"/>
</form>
